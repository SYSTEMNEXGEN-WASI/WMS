            $("#section-message").modal('show');

            return false;
        } else { $("#txtCityDesc").css("border-color", "#ccc"); }
        if (code == "0" || code == null || code =="") {
            $("#txtCityCode").css("border-color", "red");
            $("#modalMessage").css("background-color", "#e46457");
