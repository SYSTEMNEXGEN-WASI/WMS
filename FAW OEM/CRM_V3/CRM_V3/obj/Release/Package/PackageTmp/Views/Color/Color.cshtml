                        <div class="table-responsive" style="height:300px;">
                            <table id="JobTable" class="table table-striped table-hover responsive">
                                <thead>
                                    <tr>
                                        <th>Sr</th>
                                        <th>Dealer Code</th>
                                        <th>Color Code</th>
                                        <th>Color Description</th>
                                        <th>Vehicle Category</th>
                                        <th>Action</th>
