<script>

    //main to call job category detail
    $(document).ready(function () {
        Get_JobCategoryData(); //$('#<%=GDV.ClientID %>').Scrollable(
        $('#ParentDeal').Scrollable();
    });

    //job category detail
    function Get_JobCategoryData() {
        debugger;
        var rowCount = 1;
        var dataCount = 1;
        var SNo = 1;
        $.ajax({
            dataType: "json",
            async: true,
            type: 'GET',
            url: '@Url.Content("~/OEM/Select_JobCategoryDetails")',
            success: function (data) {

                if (data.Success == true) {
                    var item = JSON.parse(data.Response)
                    $("#ParentDeal tbody tr").remove()
                    //ProductDetail
                    if (item.length > 0) {

                        $.each(item, function (value, item) {
                            debugger;
                            $("#ParentDeal tbody").append('<tr onclick="JobCatCodeSelection(this);" id="fixedRow' + (rowCount++) + '" data-tr-count="' + (dataCount++) + '">' +
                                                                '<td>' + SNo++ + '</td>' +
                                                                '<td > <label id="lblJobCatCode">' + item.JobCatCode.trim() + ' </label></td>' +
                                                                '<td> <label id="lblJobCatDesc">' + item.JobCatDesc.trim() + ' </label></td>' +
                                                                '<td><button type="button" class="btn btn-primary btn-xs" id="btnRemove" onclick="RemoveCategory(this)" style="background-color:red;"><i class="fa fa-minus fa-lg"></i></button></td>' +
                                                            '</tr>');
                        });

                    }
                }
            },
            complete: function () {

            },
        });
    }
    //data selection to grid /edit
    function JobCatCodeSelection(value) {
        var valjobCode = $(value).closest('tr').find("#lblJobCatCode").text();
        var valjobDes = $(value).closest('tr').find("#lblJobCatDesc").text();
        $("#txtJobCatCode").val(valjobCode);
        debugger;
        $("#txtJobCatDesc").val(valjobDes);
    }
    $("#btnSave").click(function () {
        var exitflag = false;
        var row = $("#ParentDeal tbody tr").length;
        var des = $("#txtJobCatDesc").val().trim();
        if (des == "" || des == null) {
            $("#warning").text("Description Should Not Be Left Blank");

        }
        else {
            $("#ParentDeal tbody tr").each(function () {
                var tem = $(this).closest('tr').find('#lblJobCatDesc').text().trim();
                debugger;
                if (des == tem) {
                    $("#warning").text("Description Already Exist");
                    exitflag = true;
                }
            });
        }
        if (exitflag) return false;
        //debugger
        $("#txtJobCatCode").css("border-color", "#ccc");
        $("#txtJobCatDesc").css("border-color", "#ccc");
        var JobCatCode = $("#txtJobCatCode").val();
        var JobCatDesc = $("#txtJobCatDesc").val();

        //if (JobCatCode == "" || JobCatCode == "") {
        //    $("#txtJobCatCode").css("border-color", "red");
        //    return;
        //}
        if (JobCatDesc == "" || JobCatDesc == "") {
            $("#txtJobCatDesc").css("border-color", "red");
            return;
        }

        $("#section-confirm").modal("show");
    })
    function SaveMasterEnquiry() {

        var dto = {};
        debugger;
        dto.DealerCode = "COMON";
        dto.JobCatCode = $("#txtJobCatCode").val();
        dto.JobCatDesc = $("#txtJobCatDesc").val();
        dto.AccountCode = "";

        //if ($("#checkBoxParent").prop("checked") == true) {
        //    dto.Active = "Y";
        //}
        //else {
        //    dto.Active = "N";
        //}

        $.ajax({
            dataType: "json",
            async: true,
            type: 'GET',
            url: '@Url.Content("~/OEM/Insert_JobCategory")',
            data: dto,
            success: function (data) {

                if (data) {
                    if (data.Success == true) {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#64c344");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                    }
                    else {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#e46457");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                    }
                }
            },
            complete: function () {

            },
            error: function (data) {
                $("#section-confirm").modal("hide")
                $("#modalMessage").css("background-color", "#e46457");
                $("#lblMessage").text(data.Message)
                $("#section-message").modal('show');
            }
        });

    }
function RemoveCategory(value) {
        var value = $(value).closest('tr').find("#lblJobCatCode").text();
        debugger;
        $.ajax({
            dataType: "json",
            async: true,
            type: 'GET',
            url: '@Url.Content("~/OEM/Delete_JobCategoryDetails")',
            data: { 'value': value },
            success: function (data) {
                //debugger
                if (data) {
                    if (data.Success == true) {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#64c344");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                        setTimeout(function () {
                            $('#section-message').modal('hide')
                        }, 4000);
                    }
                    else {
                        $("#section-confirm").modal("hide")
                        $("#modalMessage").css("background-color", "#e46457");
                        $("#lblMessage").text(data.Message)
                        $("#section-message").modal('show');
                        setTimeout(function () {
                            $('#section-message').modal('hide')
                        }, 4000);
                    }
                }
            },
            complete: function () {

            },
            error: function (data) {
                $("#section-confirm").modal("hide")
                $("#modalMessage").css("background-color", "#e46457");
                $("#lblMessage").text(data.Message)
                $("#section-message").modal('show');
            }
        });
    }
  function ClearDesc(value) {

        $("#txtJobCatDesc").val("")
    }

